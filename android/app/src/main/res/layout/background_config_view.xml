<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp">

        <ImageButton
            android:id="@+id/first_box_image_view"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/box_image_border_solid">
        </ImageButton>

        <TextView
            android:id="@+id/first_box_text_view"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/first_box_image_view"
            android:layout_alignTop="@+id/first_box_image_view"
            android:layout_alignEnd="@+id/first_box_image_view"
            android:layout_alignBottom="@+id/first_box_image_view"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="사진"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp">

        <ImageButton
            android:id="@+id/second_box_image_view"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/box_image_border">
        </ImageButton>

        <TextView
            android:id="@+id/second_box_text_view"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/second_box_image_view"
            android:layout_alignTop="@+id/second_box_image_view"
            android:layout_alignEnd="@+id/second_box_image_view"
            android:layout_alignBottom="@+id/second_box_image_view"
            android:gravity="center"
            android:textColor="@color/text_gray_color"
            android:text="색상"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>