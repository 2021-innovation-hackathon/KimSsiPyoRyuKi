<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/hocket_create_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/underline_text_orange"
            android:scaleType="fitXY">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/hocket_create_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_extracondensed_medium"
        android:text="타이틀">
    </TextView>

    <EditText
        android:id="@+id/hocket_create_input_title"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="40dp"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:hint="타이틀을 입력해주세요.">
    </EditText>

    <TextView
        android:id="@+id/hocket_create_desc_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="25dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_extracondensed_medium"
        android:text="설명">
    </TextView>

    <EditText
        android:id="@+id/hocket_create_input_desc"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="5"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:scrollbars="vertical"
        android:hint="본인의 하켓에 대해 소개하는 글을 작성해주세요.">
    </EditText>

    <TextView
        android:id="@+id/hocket_term_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_extracondensed_medium"
        android:text="목표 기간 설정">
    </TextView>

    <com.kims.hackathon.view.TermView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp">
    </com.kims.hackathon.view.TermView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/hocket_create_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_right"
            app:backgroundTint="@color/purpley_blue">
        </com.google.android.material.floatingactionbutton.FloatingActionButton>
    </RelativeLayout>

</LinearLayout>